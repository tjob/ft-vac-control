{
    "version": "0.2.0",
    "configurations": [
        {
          "name": "Debug", 
          "searchDir": [
           "/Users/tim/openocd/tcl"
          ],
          "cwd": "${workspaceRoot}",
          "executable": "${command:cmake.launchTargetPath}",
          "request": "launch",
          "type": "cortex-debug",
          "servertype": "openocd",
          "gdbPath" : "arm-none-eabi-gdb",
          "device": "RP2040",
          "configFiles": [
              "/interface/cmsis-dap.cfg",
              "/target/rp2040.cfg"
          ],
          "svdFile": "${env:PICO_SDK_PATH}/src/rp2040/hardware_regs/rp2040.svd",
          "runToEntryPoint": "true",
          "postRestartCommands": [
              "break main",
              "continue"
          ],
          "showDevDebugOutput": "raw"
      }
    ]
  }